{
    "extends":"../tsconfig.json",
    "compilerOptions": {
        "paths": {
            "@/*":["./src/*"]
        }
    },
    "include": [
        "./config/*.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
       "src/**/*.igonre.tsx" ,
       "src/**/*.igonre.ts",
       "node_modules",
       "dist"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}