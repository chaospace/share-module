{
    "extends":"../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "typeRoots":["node_modules/@types", "./@types"],
        "paths": {
            "*":["./@mf-types/*"],
            "@/*":["./src/*"]
        }
    },
    "include": [
        "./config/*.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}