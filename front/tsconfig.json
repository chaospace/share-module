{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "preserveSymlinks": false,
    "composite": true,
    "typeRoots": ["../node_modules/@types", "node_modules/@types", "@mf-types", "@types"],
    "paths": {
      "/*": ["./@mf-type/*", "./@types/*"],
      "@/*": ["./src/*", "../src/*"]
    }
  },
  "include": [
    ".storybook/*.ts",
    ".storybook/*.tsx",
    "config/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "@types/styled.d.ts"
  ]
}
