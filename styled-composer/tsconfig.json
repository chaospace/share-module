{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "preserveSymlinks": false,
    "composite": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx"],
  "ts-node": {
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "CommonJS"
    }
  }
}
