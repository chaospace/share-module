{
    "extends":"../tsconfig.json",
    "compilerOptions": {
        "composite":true,
        "paths": {
            "@/*":["./src/*"]
        },
        "outDir": "./dist",
    },
    "include":[
        "src/**/*.ts",
        "src/**/*.tsx",
        "tests/**/*.ts", 
        "tests/**/*.tsx"
    ],
    "ts-node":{
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}